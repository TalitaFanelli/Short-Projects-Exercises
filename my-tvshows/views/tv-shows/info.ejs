<% include ../partials/header.ejs %>

<section id="about">
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
    <form method="post">
      <h2>About: <%= show.name %></h2>

      <div class="form-group">
      TV Show's name: <%= show.name %><br/>
    </div>
    <textarea class="form-control" name="commentary"> </textarea>

    <input type="submit" value="Comment"/><br/><br/>

    <% show.comments.forEach(c => { %>
    <div class="card"> <%= c %> </div>
    <% } ) %>
    </form>
  </div>
  </div>
</div>
</section>

