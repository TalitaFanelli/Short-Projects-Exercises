<% include ../partials/header.ejs %>

<section id="about">
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
    <form method="post">
      <h2>New TV Show</h2>

      <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp" placeholder="Insert TV show's name">
      <small id="nameHelp" class="form-text text-muted">TV show's name to be salved</small>  

      <% if(errors && errors.indexOf('name') >= 0 ) { %>
      <small id="nameHelp" class="form-text text-muted">Please, insert TV show's name</small> 
    <% } %>
    </div>

    <div class="form-group">
    <label for="status">Status</label>
    <select class="form-control" id="status" name="status">
      <option value="to-watch">to-watch</option>
      <option value="watching">watching</option>
      <option value="watched">watched</option>
    </select>
  </div>

      <button type="submit" class="btn btn-success">Save</button>
    </form>
    </div>
  </div>
</div>
</section>

<% include ../partials/footer.ejs %>